<?xml version="1.0" encoding="utf-8"?>
<list>
<skill id="40006" levels="1" name="Heavy Set">
<!--
  Description(s):
      Increases resistance to poison/bleeding attacks. Atk. Spd. and maximum weight limit are also increased. STR+4, CON-4
-->
  <set name="target" val="TARGET_SELF"/>
  <set name="skillType" val="BUFF"/>
  <set name="operateType" val="OP_PASSIVE"/>
  <set name="castRange" val="-1"/>
  <set name="effectRange" val="-1"/>
  <for>
    <mul order="0x30" stat="pAtkSpd" val="1.09"/> <!-- Atk. Spd. +8% -->
    <add order="0x40" stat="maxLoad" val="5763"/> <!-- Weight increased plus the point at which a weight penalty is applied +5763 -->
    <mul order="0x30" stat="poisonVuln" val="0.4"/> <!-- Poison Resistance +80% -->
    <mul order="0x30" stat="bleedVuln" val="0.4"/> <!-- Bleed Resistance +80% -->
    <add order="0x40" stat="STR" val="4"/> <!-- STR +4 -->
    <sub order="0x40" stat="CON" val="4"/> <!-- CON -4 -->
  </for>
</skill>
<skill id="40008" levels="1" name="Robe Set">
<!--
  Description(s):
      Decreases magic cancel rate and increases resistance to paralysis attacks. P. Def., Casting Spd. and Speed are also increased. WIT+4, MEN-4
-->
  <set name="target" val="TARGET_SELF"/>
  <set name="skillType" val="BUFF"/>
  <set name="operateType" val="OP_PASSIVE"/>
  <set name="castRange" val="-1"/>
  <set name="effectRange" val="-1"/>
  <for>
    <mul order="0x30" stat="pDef" val="1.09"/> <!-- P. Def. +8% -->
    <mul order="0x30" stat="mAtkSpd" val="1.18"/> <!-- Casting Spd. +15% -->
    <add order="0x40" stat="runSpd" val="9"/> <!-- Speed +7 -->
    <sub order="0x40" stat="cancel" val="22"/> <!-- Small decrease in chance of spell interruption - TO CHECK -->
    <mul order="0x30" stat="paralyzeVuln" val="0.9"/> <!-- Paralysis Resistance +50% -->
    <add order="0x40" stat="WIT" val="4"/> <!-- WIT +4 -->
    <sub order="0x40" stat="MEN" val="4"/> <!-- MEN -4 -->
  </for>
</skill>
<skill id="40007" levels="1" name="Light Set">
<!--
  Description(s):
      Increases resistance to shock attacks. P. Atk., MaxMP and maximum weight limit are also increased. DEX+1, CON-1
-->
  <set name="target" val="TARGET_SELF"/>
  <set name="skillType" val="BUFF"/>
  <set name="operateType" val="OP_PASSIVE"/>
  <set name="castRange" val="-1"/>
  <set name="effectRange" val="-1"/>
  <for>
    <mul order="0x30" stat="pAtk" val="1.09"> <!-- Archery P. Atk. +8% -->
      <and>
        <using kind="Bow,Crossbow"/>
      </and>
    </mul>
    <add order="0x40" stat="maxMp" val="280"/> <!-- MP +280 -->
    <add order="0x40" stat="maxLoad" val="5763"/> <!-- Weight increased plus the point at which a weight penalty is applied +5763 -->
    <mul order="0x30" stat="stunVuln" val="0.8"/> <!-- Stun Resistance +50% -->
    <add order="0x40" stat="DEX" val="2"/> <!-- DEX +2 -->
    <sub order="0x40" stat="CON" val="2"/> <!-- CON -2 -->
  </for>
</skill>
</list>
